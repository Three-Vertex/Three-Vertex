<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <div class="footer-logo">
                    <img class="footer-logo-icon" src={`${import.meta.env.BASE_URL}/favicon.png`} />
                    <h3 class="logo-gradient">ThreeVertex</h3>
                </div>
                <p class="footer-description">Building the future of 3D collaboration</p>
            </div>
            <div class="footer-section">
                <h4>Product</h4>
                <a href="#features">Model Viewer</a>
                <a href="#about">About</a>
                <a href="#">Documentation</a>
            </div>
            <div class="footer-section">
                <h4>Company</h4>
                <a href="#">Blog</a>
                <a href="#contact">Contact</a>
                <a href="#">Careers</a>
            </div>
            <div class="footer-section">
                <h4>Legal</h4>
                <a href="#">Privacy</a>
                <a href="#">Terms</a>
                <a href="#">Security</a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 ThreeVertex. All rights reserved.</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(--bg-secondary);
        padding: 4rem 0 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 3rem;
        margin-bottom: 3rem;
    }

    .footer-section h3 {
        margin-bottom: 1rem;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .footer-logo-icon {
        width: 40px;
        height: 40px;
        flex-shrink: 0;
    }

    .footer-logo h3 {
        margin: 0;
        line-height: 1;
        display: flex;
        align-items: center;
    }

    .logo-gradient {
        background: var(--gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .footer-section h4 {
        margin-bottom: 1rem;
        font-size: 1rem;
    }

    .footer-section a {
        display: block;
        color: var(--text-secondary);
        text-decoration: none;
        margin-bottom: 0.75rem;
        transition: color 0.3s ease;
    }

    .footer-section a:hover {
        color: var(--text-primary);
    }

    .footer-description {
        color: var(--text-secondary);
        margin-top: 0.5rem;
    }

    .footer-bottom {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        color: var(--text-secondary);
    }

    @media (max-width: 968px) {
        .footer {
            padding: 3rem 0 1.5rem;
        }

        .footer-content {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-section h3 {
            font-size: 1.5rem;
            margin-bottom: 0.75rem;
        }

        .footer-section h4 {
            font-size: 0.95rem;
            margin-bottom: 0.75rem;
        }

        .footer-section a {
            margin-bottom: 0.6rem;
            font-size: 0.9rem;
        }

        .footer-description {
            font-size: 0.9rem;
        }

        .footer-bottom {
            padding-top: 1.5rem;
            font-size: 0.9rem;
        }
    }

    @media (max-width: 640px) {
        .footer {
            padding: 2.5rem 0 1.5rem;
        }

        .footer-content {
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem 1rem;
            margin-bottom: 2rem;
        }

        .footer-section:first-child {
            grid-column: 1 / -1;
            text-align: center;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .footer-logo {
            justify-content: center;
            gap: 0.6rem;
        }

        .footer-logo-icon {
            width: 34px;
            height: 34px;
        }

        .footer-logo h3 {
            margin: 0;
        }

        .footer-section h3 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
        }

        .footer-section h4 {
            font-size: 0.8rem;
            margin-bottom: 0.5rem;
        }

        .footer-section a {
            margin-bottom: 0.4rem;
            font-size: 0.75rem;
        }

        .footer-description {
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        .footer-bottom {
            padding-top: 1.25rem;
            font-size: 0.8rem;
        }
    }
</style>

