 <!-- Coming Soon Badge -->
<div class="flex justify-center mb-4 sm:mb-6 animate-bounce">
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-orange-600/20 to-purple-600/20 border border-orange-600/30 rounded-full backdrop-blur-sm">
    <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
    </svg>
    <span class="text-orange-500 text-sm font-semibold">Coming Soon</span>
    </div>
</div>

<!-- Main Heading -->
<div class="text-center space-y-4 sm:space-y-6 mb-12 sm:mb-16">
    <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-white tracking-tight leading-tight">
    The Future of
    <span class="block bg-gradient-to-r from-orange-500 via-orange-600 to-purple-600 bg-clip-text text-transparent">
        3D Collaboration
    </span>
    </h1>
    <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-400 max-w-3xl mx-auto px-4">
    Experience the next generation of 3D model viewing, sharing, and collaboration. 
    <span class="text-orange-500 font-semibold"> Get early access</span> to revolutionary features.
    </p>
</div>

<!-- Early Access Form -->
<div class="max-w-2xl mx-auto mb-[20vh] sm:mb-[30vh]">
    <div class="bg-zinc-950 border border-orange-900/40 rounded-2xl p-6 sm:p-10 shadow-2xl shadow-orange-600/10 backdrop-blur-sm">
    <h3 class="text-white font-semibold text-xl sm:text-2xl mb-4 sm:mb-6 text-center">Get Early Access</h3>
    <form class="flex flex-col gap-3 sm:gap-4 max-w-xl mx-auto">
        <input 
        type="email"
        placeholder="Enter your email address"
        class="w-full bg-zinc-900 border border-orange-900/40 text-white placeholder:text-gray-500 h-12 sm:h-14 text-sm sm:text-base px-4 sm:px-6 rounded-md focus:outline-none focus:border-orange-600"
        />
        <button 
        type="submit"
        class="w-full bg-gradient-to-r from-orange-600 to-orange-700 hover:from-orange-700 hover:to-orange-800 text-white font-medium px-6 sm:px-8 h-12 sm:h-14 text-sm sm:text-base shadow-lg shadow-orange-600/30 rounded-md transition-all inline-flex items-center justify-center gap-2"
        >
        Join Waitlist
        <svg class="w-4 sm:w-5 h-4 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
        </button>
    </form>
    <p class="text-gray-400 text-xs sm:text-sm text-center mt-3 sm:mt-4">
        Join revolution of<span class="text-orange-500 font-semibold"> 3D Collaboration</span> now.
    </p>
    </div>
</div>