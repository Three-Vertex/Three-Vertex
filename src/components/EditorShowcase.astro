<style>
    .editor-showcase {
        position: relative;
        padding: 0 0 8rem 0;
        margin-top: -3rem;
        z-index: 10;
    }

    .container {
        max-width: 1400px;
    }

    .editor-window {
        background: rgba(20, 20, 20, 0.95);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.5),
            0 0 0 1px rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        animation: slideUp 1s ease-out;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Window Header */
    .window-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        background: rgba(10, 10, 10, 0.8);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .window-controls {
        display: flex;
        gap: 0.5rem;
    }

    .control {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: block;
    }

    .control.close { background: #ff5f56; }
    .control.minimize { background: #ffbd2e; }
    .control.maximize { background: #27c93f; }

    .window-title {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .window-title-icon {
        width: 28px;
        height: 28px;
        flex-shrink: 0;
    }

    .window-title span {
        line-height: 1;
    }

    .window-actions {
        display: flex;
        gap: 0.5rem;
    }

    .action-btn {
        background: rgba(255, 255, 255, 0.05);
        border: none;
        padding: 0.5rem;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: background 0.2s;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .action-btn svg {
        width: 1rem;
        height: 1rem;
        color: var(--text-secondary);
    }

    .action-btn:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .action-btn:hover svg {
        color: var(--text-primary);
    }

    /* Editor Content */
    .editor-content {
        display: grid;
        grid-template-columns: 220px 1fr 240px;
        height: 650px;
    }

    /* Sidebar */
    .sidebar {
        background: rgba(10, 10, 10, 0.5);
        padding: 1rem;
        border-right: 1px solid rgba(255, 255, 255, 0.05);
        overflow-y: auto;
    }

    .sidebar-section {
        margin-bottom: 2rem;
    }

    .sidebar-title {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--text-secondary);
        margin-bottom: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.05em;
    }

    .sidebar-item {
        padding: 0.5rem;
        border-radius: 0.5rem;
        margin-bottom: 0.25rem;
        cursor: pointer;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }

    .sidebar-item .icon {
        width: 1rem;
        height: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sidebar-item .icon svg {
        width: 100%;
        height: 100%;
        color: var(--text-secondary);
    }

    .sidebar-item:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .sidebar-item.active {
        background: rgba(249, 115, 22, 0.15);
        color: var(--accent-primary);
    }

    .sidebar-item.active .icon svg {
        color: var(--accent-primary);
    }

    .property {
        margin-bottom: 1rem;
        font-size: 0.85rem;
    }

    .property-values {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        margin-top: 0.5rem;
    }

    .value {
        color: var(--text-secondary);
        font-family: monospace;
        font-size: 0.8rem;
    }

    /* Viewport */
    .viewport {
        display: flex;
        flex-direction: column;
        background: rgba(5, 5, 5, 0.5);
    }

    .viewport-controls {
        display: flex;
        gap: 0.5rem;
        padding: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .view-btn {
        padding: 0.5rem 1rem;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.85rem;
    }

    .view-btn:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .view-btn.active {
        background: var(--gradient);
        border-color: transparent;
        color: var(--text-primary);
    }

    /* Model Viewer */
    .model-viewer {
        position: relative;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .grid-backdrop {
        position: absolute;
        inset: 0;
        background-image: 
            linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        animation: gridMove 20s linear infinite;
    }

    @keyframes gridMove {
        0% {
            background-position: 0 0;
        }
        100% {
            background-position: 50px 50px;
        }
    }

    /* 3D Model Shape */
    .model-container {
        perspective: 1200px;
        width: 300px;
        height: 300px;
    }

    .model-shape {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        animation: modelRotate 15s infinite ease-in-out;
    }

    @keyframes modelRotate {
        0%, 100% {
            transform: rotateX(20deg) rotateY(0deg) rotateZ(0deg);
        }
        25% {
            transform: rotateX(20deg) rotateY(90deg) rotateZ(10deg);
        }
        50% {
            transform: rotateX(20deg) rotateY(180deg) rotateZ(0deg);
        }
        75% {
            transform: rotateX(20deg) rotateY(270deg) rotateZ(-10deg);
        }
    }

    .shape-face {
        position: absolute;
        left: 50%;
        top: 50%;
    }

    /* Rectangular side faces */
    .side-face {
        width: 110px;
        height: 140px;
        margin-left: -55px;
        margin-top: -70px;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.25), rgba(194, 65, 12, 0.15));
        border: 2px solid rgba(249, 115, 22, 0.6);
        backdrop-filter: blur(10px);
        box-shadow: 
            inset 0 0 30px rgba(249, 115, 22, 0.1),
            0 0 20px rgba(249, 115, 22, 0.2);
    }

    /* Hexagonal end caps */
    .hex-face {
        width: 110px;
        height: 95px;
        margin-left: -55px;
        margin-top: -47.5px;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.3), rgba(194, 65, 12, 0.2));
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
        border: 2px solid rgba(249, 115, 22, 0.7);
        backdrop-filter: blur(10px);
        box-shadow: 
            inset 0 0 30px rgba(249, 115, 22, 0.15),
            0 0 25px rgba(249, 115, 22, 0.25);
    }

    /* 6 side faces positioned around hexagon */
    .face-1 {
        transform: rotateY(0deg) translateZ(95px);
        animation: pulse 3s ease-in-out infinite;
    }

    .face-2 {
        transform: rotateY(60deg) translateZ(95px);
        animation: pulse 3s ease-in-out infinite 0.5s;
    }

    .face-3 {
        transform: rotateY(120deg) translateZ(95px);
        animation: pulse 3s ease-in-out infinite 1s;
    }

    .face-4 {
        transform: rotateY(180deg) translateZ(95px);
        animation: pulse 3s ease-in-out infinite 1.5s;
    }

    .face-5 {
        transform: rotateY(240deg) translateZ(95px);
        animation: pulse 3s ease-in-out infinite 2s;
    }

    .face-6 {
        transform: rotateY(300deg) translateZ(95px);
        animation: pulse 3s ease-in-out infinite 2.5s;
    }

    /* Top and bottom hexagonal faces */
    .face-top {
        transform: rotateX(90deg) translateZ(70px);
        animation: pulse 3s ease-in-out infinite 0.25s;
    }

    .face-bottom {
        transform: rotateX(-90deg) translateZ(70px);
        animation: pulse 3s ease-in-out infinite 0.75s;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            box-shadow: 
                inset 0 0 30px rgba(249, 115, 22, 0.1),
                0 0 20px rgba(249, 115, 22, 0.2);
        }
        50% {
            opacity: 0.8;
            box-shadow: 
                inset 0 0 40px rgba(249, 115, 22, 0.2),
                0 0 30px rgba(249, 115, 22, 0.4);
        }
    }

    /* Axis Indicator */
    .axis-indicator {
        position: absolute;
        bottom: 2rem;
        left: 2rem;
        display: flex;
        gap: 1rem;
    }

    .axis {
        font-size: 0.75rem;
        font-weight: 700;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-family: monospace;
    }

    .axis-x {
        background: rgba(255, 68, 68, 0.2);
        color: #ff4444;
        border: 1px solid rgba(255, 68, 68, 0.4);
    }

    .axis-y {
        background: rgba(68, 255, 68, 0.2);
        color: #44ff44;
        border: 1px solid rgba(68, 255, 68, 0.4);
    }

    .axis-z {
        background: rgba(68, 68, 255, 0.2);
        color: #4444ff;
        border: 1px solid rgba(68, 68, 255, 0.4);
    }

    /* Stats Overlay */
    .stats-overlay {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.6);
        padding: 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.75rem;
        font-family: monospace;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .stat {
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
    }

    .stat:last-child {
        margin-bottom: 0;
    }

    /* Bottom Toolbar */
    .bottom-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        background: rgba(10, 10, 10, 0.5);
    }

    .toolbar-section {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .tool-btn {
        padding: 0.5rem 0.75rem;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .tool-btn svg {
        width: 1rem;
        height: 1rem;
        color: var(--text-secondary);
    }

    .tool-btn:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .tool-btn:hover svg {
        color: var(--text-primary);
    }

    .tool-btn.active {
        background: rgba(249, 115, 22, 0.15);
        border-color: var(--accent-primary);
        color: var(--accent-primary);
    }

    .tool-btn.active svg {
        color: var(--accent-primary);
    }

    .zoom-level {
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-family: monospace;
    }

    /* Right Panel */
    .right-panel {
        background: rgba(10, 10, 10, 0.5);
        padding: 1rem;
        border-left: 1px solid rgba(255, 255, 255, 0.05);
        overflow-y: auto;
    }

    .panel-section {
        margin-bottom: 2rem;
    }

    .panel-title {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--text-secondary);
        margin-bottom: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.05em;
    }

    .material-preview {
        width: 100%;
        height: 120px;
        background: var(--gradient);
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        animation: materialShine 3s ease-in-out infinite;
    }

    @keyframes materialShine {
        0%, 100% {
            opacity: 0.8;
        }
        50% {
            opacity: 1;
        }
    }

    .material-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .option {
        font-size: 0.85rem;
    }

    .option span {
        display: block;
        margin-bottom: 0.5rem;
        color: var(--text-secondary);
    }

    .color-picker {
        width: 100%;
        height: 32px;
        background: var(--gradient);
        border-radius: 0.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        cursor: pointer;
    }

    .slider {
        width: 100%;
        height: 6px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
        position: relative;
    }

    .slider-fill {
        height: 100%;
        background: var(--gradient);
        border-radius: 3px;
        transition: width 0.3s;
    }

    /* View Model Button */
    .view-model-container {
        display: flex;
        justify-content: center;
        margin-top: 3rem;
    }

    .btn-view-model {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2.5rem;
        background: linear-gradient(135deg, #f97316 0%, #c2410c 100%);
        color: #ffffff;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(249, 115, 22, 0.3);
    }

    .btn-view-model svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    .btn-view-model:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(249, 115, 22, 0.4);
    }

    .btn-view-model:active {
        transform: translateY(-1px);
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        .editor-content {
            grid-template-columns: 180px 1fr 180px;
            height: 500px;
        }

        .model-container {
            width: 200px;
            height: 200px;
        }

        .side-face {
            width: 85px;
            height: 105px;
